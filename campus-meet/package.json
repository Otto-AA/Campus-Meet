{
  "name": "campus-meet",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "test:ci": "jest --collect-coverage",
    "detox": "detox test -c android.emu.release --take-screenshots failing --record-videos failing",
    "detox:build": "npx cross-env DETOX=1 detox build -c android.emu.release",
    "build:dev": "eas build --profile development --platform android --local",
    "build:prev": "eas build --profile preview --platform android --local",
    "build:prod": "eas build --profile production --platform android --local",
    "seed": "ts-node ./seeds/development.seeds.ts",
    "prepare": "cd .. && husky install campus-meet/.husky"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "~1.17.3",
    "@react-native-community/datetimepicker": "6.5.2",
    "@react-native-community/slider": "4.2.4",
    "@react-navigation/bottom-tabs": "^6.0.5",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.1.0",
    "@react-navigation/stack": "^6.3.11",
    "@types/luxon": "^3.2.0",
    "@types/react-native-vector-icons": "^6.4.13",
    "dotenv": "^16.0.3",
    "expo": "~47.0.12",
    "expo-asset": "~8.7.0",
    "expo-constants": "~14.0.2",
    "expo-dev-client": "~2.0.1",
    "expo-device": "~5.0.0",
    "expo-font": "~11.0.1",
    "expo-image-picker": "^14.0.2",
    "expo-linking": "~3.3.0",
    "expo-location": "~15.0.1",
    "expo-notifications": "~0.17.0",
    "expo-sharing": "^11.0.1",
    "expo-splash-screen": "~0.17.5",
    "expo-sqlite": "~11.0.0",
    "expo-status-bar": "~1.4.2",
    "expo-system-ui": "~2.0.1",
    "expo-web-browser": "~12.0.0",
    "firebase": "^9.14.0",
    "geofire-common": "^6.0.0",
    "geofirestore": "^5.2.0",
    "geolib": "^3.3.3",
    "haversine": "^1.1.1",
    "haversine-distance": "^1.2.1",
    "luxon": "^3.2.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.5",
    "react-native-date-picker": "^4.2.6",
    "react-native-maps": "1.3.2",
    "react-native-paper": "^4.12.5",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.0",
    "react-native-web": "~0.18.9",
    "rn-material": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@config-plugins/detox": "^4.0.0",
    "@faker-js/faker": "^7.6.0",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-native": "^11.5.0",
    "@types/haversine": "^1.1.5",
    "@types/jest": "^29.2.3",
    "@types/react": "~18.0.24",
    "@types/react-native": "~0.70.6",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "cross-env": "^7.0.3",
    "detox": "^20.1.1",
    "eslint": "^8.28.0",
    "eslint-config-universe": "^11.1.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "firebase-admin": "^11.4.1",
    "husky": "^8.0.2",
    "intl": "^1.2.5",
    "jest-expo": "~47.0.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "react-native-svg-transformer": "^1.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
  "private": true,
  "eslintConfig": {
    "extends": "universe/native",
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "unused-imports/no-unused-imports": "error"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx}": "eslint --cache --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
